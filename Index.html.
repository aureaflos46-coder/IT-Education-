/*
Learn-IT Website (Single-file React app)

What's included:
- Tailwind-styled single-file React component (App.jsx).
- Registration and subscription flow (simulated).
- WhatsApp contact number: 0687531585.
- Bank details (Capitec) displayed for manual EFT payments.
- "Copy Account Number" button for convenience.
- Floating WhatsApp chat button on every page.

How to use:
1. Create a new React app (e.g. using `create-react-app` or Vite).
2. Add Tailwind CSS (official docs) or use CDN for testing.
3. Replace src/App.jsx with this file and run.

Suggested Git commands:
  git init
  git add .
  git commit -m "Initial commit - Learn-IT website"
  gh repo create learn-it-website --public --source=. --push

Deployment: Vercel or Netlify recommended.
*/

import React, { useState, useEffect } from "react";

export default function App() {
  const PLANS = [
    { id: "registration", name: "Registration (one-time)", price: 450 },
    { id: "monthly", name: "Monthly (recurring)", price: 200 },
  ];

  const [name, setName] = useState("");
  const [email, setEmail] = useState("");
  const [phone, setPhone] = useState("");
  const [selectedPlan, setSelectedPlan] = useState("registration");
  const [agree, setAgree] = useState(false);
  const [message, setMessage] = useState("");
  const [subscribers, setSubscribers] = useState([]);
  const [loading, setLoading] = useState(false);
  const [success, setSuccess] = useState(null);
  const [copied, setCopied] = useState(false);

  useEffect(() => {
    const saved = localStorage.getItem("learnit_subscribers");
    if (saved) setSubscribers(JSON.parse(saved));
  }, []);

  useEffect(() => {
    localStorage.setItem("learnit_subscribers", JSON.stringify(subscribers));
  }, [subscribers]);

  function validateForm() {
    if (!name.trim()) return "Please enter your full name.";
    if (!email.match(/^[^@\s]+@[^@\s]+\.[^@\s]+$/)) return "Please enter a valid email.";
    if (!phone.match(/^[0-9+\-() ]{7,20}$/)) return "Please enter a valid phone number.";
    if (!agree) return "Please agree to the terms and conditions.";
    return null;
  }

  async function handleSubmit(e) {
    e.preventDefault();
    setMessage("");
    const err = validateForm();
    if (err) {
      setMessage(err);
      return;
    }

    setLoading(true);
    setMessage("");

    const planObj = PLANS.find((p) => p.id === selectedPlan);
    try {
      const newSub = {
        id: Date.now(),
        name,
        email,
        phone,
        plan: planObj,
        registeredAt: new Date().toISOString(),
      };
      setSubscribers((s) => [newSub, ...s]);
      setSuccess(`Thank you ${name}! Please pay R${planObj.price} via EFT to the bank details below and send proof via WhatsApp.`);
      setName("");
      setPhone("");
      setAgree(false);
    } catch (err) {
      setMessage("An error occurred. Please try again.");
      console.error(err);
    }

    setLoading(false);
  }

  function formatCurrency(n) {
    return `R${n}`;
  }

  function copyAccountNumber() {
    navigator.clipboard.writeText("1535177207");
    setCopied(true);
    setTimeout(() => setCopied(false), 2000);
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-50 to-white flex items-start justify-center py-12 px-4 relative">
      <div className="max-w-4xl w-full bg-white shadow-lg rounded-2xl p-8">
        <header className="flex items-center justify-between mb-6">
          <div>
            <h1 className="text-2xl font-extrabold">Learn-IT & Coding</h1>
            <p className="text-sm text-gray-600">Practical classes, mentorship and community. Registration: R450 ¬∑ Monthly: R200</p>
            <p className="text-sm text-green-700 mt-1">Contact us on WhatsApp: <a href="https://wa.me/27687531585" className="underline">068 753 1585</a></p>
          </div>
          <div className="text-right">
            <span className="inline-block px-3 py-1 bg-indigo-50 text-indigo-700 rounded-full text-sm">Secure</span>
          </div>
        </header>

        <main className="grid grid-cols-1 md:grid-cols-2 gap-6">
          <section className="space-y-4">
            <h2 className="text-lg font-semibold">What you'll get</h2>
            <ul className="list-disc pl-5 text-gray-700 space-y-1">
              <li>Hands-on coding workshops (HTML/CSS, JavaScript, Python).</li>
              <li>Career guidance and CV/portfolio support.</li>
              <li>Weekly mentorship sessions & WhatsApp study groups.</li>
              <li>Beginner to intermediate curriculum ‚Äî steady progression.</li>
            </ul>

            <div className="mt-4 bg-gray-50 p-4 rounded-lg">
              <h3 className="font-semibold">Pricing</h3>
              <p className="text-sm text-gray-600">Choose a plan. After registration, pay manually using the bank details below.</p>

              <div className="mt-3 space-y-2">
                {PLANS.map((p) => (
                  <div key={p.id} className="flex items-center justify-between border rounded p-3">
                    <div>
                      <div className="font-medium">{p.name}</div>
                      <div className="text-sm text-gray-600">{p.id === 'monthly' ? 'Recurring monthly' : 'One-time'}</div>
                    </div>
                    <div className="text-lg font-semibold">{formatCurrency(p.price)}</div>
                  </div>
                ))}
              </div>
            </div>

            <div className="mt-4 bg-yellow-50 p-4 rounded-lg border border-yellow-200">
              <h3 className="font-semibold text-yellow-800">Bank Details (for EFT payments)</h3>
              <p className="text-sm text-gray-700">Capitec Bank</p>
              <p className="text-sm text-gray-700">Account Number: <span className="font-semibold">1535177207</span></p>
              <p className="text-sm text-gray-700">Account Type: Savings</p>
              <button onClick={copyAccountNumber} className="mt-2 px-3 py-1 bg-indigo-600 text-white rounded text-sm">
                {copied ? "Copied!" : "Copy Account Number"}
              </button>
              <p className="text-sm text-gray-700 mt-2">After payment, please send proof to WhatsApp <a href="https://wa.me/27687531585" className="underline">068 753 1585</a>.</p>
            </div>

            <div className="mt-4">
              <h3 className="font-semibold">How to start</h3>
              <ol className="list-decimal pl-5 text-gray-700 space-y-1 text-sm">
                <li>Complete the form and submit your registration.</li>
                <li>Make payment via EFT to the Capitec account above.</li>
                <li>Send proof of payment to our WhatsApp.</li>
                <li>Receive a welcome email with the course schedule.</li>
              </ol>
            </div>
          </section>

          <section className="bg-white p-6 border rounded-lg">
            <h2 className="text-lg font-semibold mb-2">Register / Subscribe</h2>
            <form onSubmit={handleSubmit} className="space-y-4">
              <div>
                <label className="block text-sm font-medium text-gray-700">Full name</label>
                <input value={name} onChange={(e) => setName(e.target.value)} className="mt-1 block w-full border rounded px-3 py-2" placeholder="Your full name" />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700">Email</label>
                <input value={email} onChange={(e) => setEmail(e.target.value)} className="mt-1 block w-full border rounded px-3 py-2" placeholder="you@example.com" />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700">Phone</label>
                <input value={phone} onChange={(e) => setPhone(e.target.value)} className="mt-1 block w-full border rounded px-3 py-2" placeholder="+27 71 000 0000" />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700">Select plan</label>
                <select value={selectedPlan} onChange={(e) => setSelectedPlan(e.target.value)} className="mt-1 block w-full border rounded px-3 py-2">
                  {PLANS.map((p) => (
                    <option key={p.id} value={p.id}>{`${p.name} ‚Äî ${formatCurrency(p.price)}`}</option>
                  ))}
                </select>
              </div>

              <div className="flex items-start gap-2">
                <input id="agree" type="checkbox" checked={agree} onChange={(e) => setAgree(e.target.checked)} />
                <label htmlFor="agree" className="text-sm text-gray-700">I agree to the terms and allow Learn-IT to contact me.</label>
              </div>

              {message && <div className="text-sm text-red-600">{message}</div>}
              {success && <div className="text-sm text-green-700">{success}</div>}

              <div className="flex items-center gap-3">
                <button type="submit" className="px-4 py-2 bg-indigo-600 text-white rounded shadow" disabled={loading}>
                  {loading ? 'Processing...' : 'Submit Registration'}
                </button>
                <button type="button" onClick={() => {setName(''); setEmail(''); setPhone(''); setAgree(false); setMessage(''); setSuccess(null);}} className="px-4 py-2 border rounded">
                  Reset
                </button>
              </div>

              <div className="text-xs text-gray-500 mt-2">After registering, please pay manually via EFT to the Capitec account and send proof via WhatsApp.</div>
            </form>

            <div className="mt-6">
              <h3 className="font-semibold">Recent registrations (demo)</h3>
              {subscribers.length === 0 ? (
                <div className="text-sm text-gray-500 mt-2">No registrations yet.</div>
              ) : (
                <ul className="mt-2 space-y-2 max-h-40 overflow-auto">
                  {subscribers.map((s) => (
                    <li key={s.id} className="border rounded px-3 py-2 flex justify-between items-center">
                      <div>
                        <div className="font-medium">{s.name}</div>
                        <div className="text-xs text-gray-600">{s.email} ¬∑ {s.phone}</div>
                      </div>
                      <div className="text-sm">{s.plan.name} ¬∑ <span className="font-semibold">R{s.plan.price}</span></div>
                    </li>
                  ))}
                </ul>
              )}
            </div>
          </section>
        </main>

        <footer className="mt-8 text-center text-sm text-gray-500">
          <div>¬© {new Date().getFullYear()} Learn-IT. Built with ‚ù§Ô∏è. Payments must be made via EFT to Capitec Bank.</div>
          <div className="mt-2">Capitec Bank ¬∑ Account Number: 1535177207 ¬∑ Savings</div>
          <div className="mt-2">Contact us on WhatsApp: <a href="https://wa.me/27687531585" className="underline">068 753 1585</a></div>
        </footer>
      </div>

      {/* Floating WhatsApp button */}
      <a
        href="https://wa.me/27687531585"
        target="_blank"
        rel="noopener noreferrer"
        className="fixed bottom-6 right-6 bg-green-500 hover:bg-green-600 text-white rounded-full shadow-lg w-14 h-14 flex items-center justify-center text-2xl"
      >
        üí¨
      </a>
    </div>
  );
}
